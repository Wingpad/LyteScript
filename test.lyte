/* Import the test classes */
Import("Animal.*")
Import("Barker")

/* Icky Math */
Factorial <- @(n) {
  If (n `<=` 1, {
    1
  }, {
    n `*` Factorial(n `-` 1)
  })
}

6 Factorial EchoLn

